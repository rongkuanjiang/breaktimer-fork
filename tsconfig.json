{
  "compilerOptions": {
    "typeRoots": ["app/types"],
    "target": "es2019",
    "baseUrl": "./",
    "rootDir": "./",
    "paths": {
      "@/*": ["./app/renderer/*"]
    },
    "jsx": "react-jsx",
    "module": "esnext",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "pretty": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "lib": ["es2020", "dom"],
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["app/**/*"],
  "exclude": ["node_modules", "dist", "release", "app/renderer/dist"]
}
